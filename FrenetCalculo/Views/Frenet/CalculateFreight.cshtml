@model FrenetCalculate.Models.CalculateFreightViewModel

<h1>Calculate Freight</h1>

<form method="post" asp-action="CalculateFreight">
    <div>
        <label for="OriginZipCode">Origin Zip Code:</label>
        <input type="text" id="OriginZipCode" name="OriginZipCode" value="@Model.OriginZipCode" required />
    </div>
    <div>
        <label for="DestinationZipCode">Destination Zip Code:</label>
        <input type="text" id="DestinationZipCode" name="DestinationZipCode" value="@Model.DestinationZipCode" required />
    </div>
    <button type="submit">Calculate</button>
</form>

@if (Model.FreightQuotes != null && Model.FreightQuotes.Any())
{
    <h2>Freight Quotes:</h2>
    <table>
        <thead>
            <tr>
                <th>Origin Zip Code</th>
                <th>Destination Zip Code</th>
                <th>Freight Price</th>
                <th>Quote Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quote in Model.FreightQuotes)
            {
                <tr>
                    <td>@quote.OriginZipCode</td>
                    <td>@quote.DestinationZipCode</td>
                    <td>@quote.FreightPrice</td>
                    <td>@quote.QuoteDate</td>
                </tr>
            }
        </tbody>
    </table>
}